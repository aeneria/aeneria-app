{% extends 'base.html.twig' %}

{% block title %}{{ 'Exporter les données de' | trans }} {{ place.name }}{% endblock %}

{% block selection %}{% endblock %}

{% block body %}
<div class="container-fluid row justify-content-center align-items-center users">
  <div class='card config-form col-lg-6 col-md-8'>
    <div class="card-body">
      <h1>{{ 'Exporter des données' | trans }}</h1>
      <p>{{ 'Pour l\'adresse&nbsp;:&nbsp;' | trans | raw }}{{ place.name }}</p>
      <hr>
      <div class="place-fetch-form">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group row">
          <div class="col-auto input-daterange">
            <span class="input-group-addon">{{ 'Exporter du' | trans }}</span>
            {{- form_widget(form['start_date']) -}}
            <span class="input-group-addon">{{ 'au' | trans }}</span>
            {{- form_widget(form['end_date']) -}}
          </div>
          <div class="col-auto">
            {{ form_row(form['submit']) }}
          </div>
        </div>
        <hr>
        <div class="form-group row">
          <div class="col-auto">
            <p>{{ 'Exporter toutes les données' | trans }}</p>
          </div>
          <div class="col-auto">
            {{ form_row(form['submit_all']) }}
          </div>
        </div>
      </div>
      {{ form_end(form) }}
      <a class="btn btn-primary" href="{{ path('config') }}">{{ 'Annuler' | trans }}</a>
    </div>
  </div>
</div>
{% endblock %}