{# Place selection #}
{% if places and places|length > 1 %}
<div class="form-btn">
  <span class="fas fa-map-marker-alt start-input" aria-hidden="true"></span>
  <div class="btn-group aeneria-select-place">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="place"></button>
    <div class="dropdown-menu dropdown-menu-right">
      {% for idPlace, place in places %}
      <a class="dropdown-item" href="#" data="{{ idPlace }}">
        <i class="fas fa-{{ place.icon }}"></i> {{ place.name }}
      </a>
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}
