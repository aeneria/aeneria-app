{# Date selection #}
<span class="fas fa-calendar-alt start-input" aria-hidden="true" style="font-size: 1.2em; color: white"></span>
<div class="input-daterange">
    <input type="text" class="form-control mr-sm-2 datepicker aeneria-start-date" name="start-date"><span class="fas fa-caret-right aeneria-inter-date" aria-hidden="true" style="font-size: 1.2em; color: black"></span><input type="text" class="form-control mr-sm-2 datepicker aeneria-end-date"  name="end-date">
</div>
<div class="btn-group aeneria-select-period">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" id="period-date">
        <span class="fas fa-ellipsis-h" aria-hidden="true"></span>
    </button>
    <div class="dropdown-menu dropdown-menu-right">
        <a class="dropdown-item" href="#" data="current-week">{{ 'Semaine en cours'|trans }}</a>
        <a class="dropdown-item" href="#" data="last-week">{{ 'Semaine précédente'|trans }}</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#" data="current-month">{{ 'Mois en cours'|trans }}</a>
        <a class="dropdown-item" href="#" data="last-month">{{ 'Mois précédent'|trans }}</a>
        <a class="dropdown-item" href="#" data="last-3-months">{{ 'Les 3 derniers mois'|trans }}</a>
        <a class="dropdown-item" href="#" data="last-6-months">{{ 'Les 6 derniers mois'|trans }}</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#" data="current-year">{{ 'Année en cours'|trans }}</a>
        <a class="dropdown-item" href="#" data="last-year">{{ 'Année précédente'|trans }}</a>
        <a class="dropdown-item" href="#" data="sliding-year">{{ 'Année glissante'|trans }}</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#" data="all"><b>{{ 'Tout'|trans }}</b></a>
    </div>
</div>
<button class="btn btn-primary aeneria-select-date aeneria-refresh">></button>
